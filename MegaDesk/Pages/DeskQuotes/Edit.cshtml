@page
@model MegaDesk.Pages.DeskQuotes.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>DeskQuote</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="DeskQuote.ID" />
            <div class="form-group">
                <label asp-for="DeskQuote.CustomerName" class="control-label"></label>
                <input asp-for="DeskQuote.CustomerName" class="form-control" />
                <span asp-validation-for="DeskQuote.CustomerName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DeskQuote.DaysToCompleteID" class="control-label"></label>
                <input asp-for="DeskQuote.DaysToCompleteID" class="form-control" />
                <span asp-validation-for="DeskQuote.DaysToCompleteID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DeskQuote.FinalPrice" class="control-label"></label>
                <input asp-for="DeskQuote.FinalPrice" class="form-control" />
                <span asp-validation-for="DeskQuote.FinalPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DeskQuote.Date" class="control-label"></label>
                <input asp-for="DeskQuote.Date" class="form-control" />
                <span asp-validation-for="DeskQuote.Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DeskQuote.Desk.Width" class="control-label"></label>
                <input asp-for="DeskQuote.Desk.Width" class="form-control" />
                <span asp-validation-for="DeskQuote.Desk.Width" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DeskQuote.Desk.Depth" class="control-label"></label>
                <input asp-for="DeskQuote.Desk.Depth" class="form-control" />
                <span asp-validation-for="DeskQuote.Desk.Depth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DeskQuote.Desk.NumberOfDrawers" class="control-label"></label>
                <input asp-for="DeskQuote.Desk.NumberOfDrawers" class="form-control" />
                <span asp-validation-for="DeskQuote.Desk.NumberOfDrawers" class="text-danger"></span>
            </div>
            <div class="form-group">
               <label class="control-label" asp-for="selectedMaterial">Material Name</label>
               <select class="form-control" asp-for="selectedMaterial" asp-items="Model.DesktopMaterials">
                  <option selected value="Model.DeskQuote.Desk.DesktopMaterialID">@Model.DeskQuote.Desk.DesktopMaterial.MaterialName</option>
               </select>
            </div>
            <div class="form-group">
               <label class="control-label" asp-for="selectedDays">Days To Complete</label>
               <select class="form-control" asp-for="selectedDays" asp-items="Model.DaysToComplete">
                  <option selected value="Model.DeskQuote.DaysToCompleteID">@Model.DeskQuote.DaysToComplete.Description</option>
               </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
